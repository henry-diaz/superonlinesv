.row
  .col-xs-12.col-sm-12.col-lg-12
    .panel.panel-default
      .panel-heading
        .panel-title.clearfix
          %h4
            = model.model_name.human

      .panel-body
        = bootstrap_nested_form_for [namespace, @item], layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10 col-md-9' do |f|
          = render partial: 'form', locals: { f: f }
          %br
          .text-center
            = f.submit t('.save'), class: 'btn btn-primary btn-lg'

      .panel-footer
        = link_to index_url, class: 'btn btn-default btn-sm' do
          %span.glyphicon.glyphicon-arrow-left
          = t '.list'

- content_for :nested_control do
  = render partial: 'layouts/latte/application/nested_control' rescue nil
