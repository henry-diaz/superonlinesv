!!! 5
%html{ language: I18n.locale }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' }
    %meta{ name: 'robots', content: 'noindex' }
    = display_meta_tags

    %link{ href: image_path('latte/favicon.png'), sizes: '128x128', rel: 'shortcut icon' }
    %link{ href: image_path('latte/favicon.png'), sizes: '128x128', rel: 'apple-touch-icon' }
    %link{ href: image_path('latte/favicon.png'), sizes: '128x128', rel: 'apple-touch-icon-precomposed' }

    = stylesheet_link_tag 'latte/application'
    = javascript_include_tag 'latte/application'

    = csrf_meta_tags
  %body
    .container-fluid
      .row
        .col-xs-12.col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
          = yield
