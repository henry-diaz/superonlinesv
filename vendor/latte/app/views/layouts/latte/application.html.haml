!!! 5
%html{ language: I18n.locale }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' }
    %meta{ name: 'robots', content: 'noindex' }
    = display_meta_tags

    %link{ href: image_path('latte/favicon.png'), sizes: '128x128', rel: 'shortcut icon' }
    %link{ href: image_path('latte/favicon.png'), sizes: '128x128', rel: 'apple-touch-icon' }
    %link{ href: image_path('latte/favicon.png'), sizes: '128x128', rel: 'apple-touch-icon-precomposed' }

    = stylesheet_link_tag 'latte/application'
    = javascript_include_tag 'latte/application'

    = csrf_meta_tags
  %body
    = render partial: 'layouts/latte/application/navbar'
    .container-fluid
      .row
        .sidebar.hidden-xs.hidden-sm.col-md-2
          = render partial: 'layouts/latte/application/sidebar'
        .col-sm-12.col-md-10.col-md-offset-2.main{ data: { section: controller.controller_name }}
          = render partial: 'layouts/latte/application/breadcrumb' rescue nil
          = render partial: 'layouts/latte/application/notice'
          = yield
